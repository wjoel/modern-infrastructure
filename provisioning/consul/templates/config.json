{
  "bootstrap": {{ is_bootstrap|to_json }},
  "server": {{ is_server|to_json }},
  "datacenter": "{{ datacenter }}",
  "data_dir": "{{ data_dir }}",
  "encrypt": "{{ lookup('password', 'consul_encrypt_password chars=ascii_letters,digits,hexdigits length=22') }}==",
  "log_level": "INFO",
  "enable_syslog": true,
{% if start_join_servers is defined and start_join_servers %}
  "start_join": {{ start_join_servers|to_json }},
{% endif %}
  "bind_addr": "{{ ansible_eth1.ipv4.address }}",
  "advertise_addr": "{{ ansible_eth1.ipv4.address }}"
}
