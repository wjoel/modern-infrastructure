[Unit]
Description=Prometheus
Requires=network.target
After=network.target
ConditionPathExists=/opt/prometheus-0.17.0rc2.linux-amd64/prometheus.yml

[Service]
Type=simple
PIDFile=/var/run/prometheus.pid
User=prometheus
Group=prometheus
WorkingDirectory=/opt/prometheus-0.17.0rc2.linux-amd64
ExecStart=/opt/prometheus-0.17.0rc2.linux-amd64/prometheus -config.file=/opt/prometheus-0.17.0rc2.linux-amd64/prometheus.yml
Restart=always
SyslogIdentifier=prometheus

[Install]
WantedBy=multi-user.target